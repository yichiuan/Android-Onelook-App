<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent">
    <TextView
        android:id="@+id/text_definition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/margin_textview_definition"
        android:layout_marginLeft="@dimen/margin_textview_definition"
        android:layout_marginTop="@dimen/margin_textview_definition"
        android:textColor="@android:color/white"
        tools:text="bluebird" />
</LinearLayout>