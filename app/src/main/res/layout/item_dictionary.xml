    android:layout_marginRight="@dimen/margin_item_dictionary_left_and_right"
    android:layout_marginStart="@dimen/margin_item_dictionary_left_and_right"
    android:layout_marginBottom="@dimen/margin_item_dictionary_top_and_bottom"
    app:contentPadding="@dimen/padding_item_dictionary">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
