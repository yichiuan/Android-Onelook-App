    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_item_dictionary_top_and_bottom"
    android:layout_marginEnd="@dimen/margin_item_dictionary_left_and_right"
